@media only screen
and (min-width : 1200px)  {

	/* render in columns */
	.col{
		.columns(200px, 2, 25px,#EEE, solid, 0px);
	}

	/* zet content uit de rechtercolom naast elkaar */
	#rightcolumn{
		height:100%;
		#content-wrapper{
			height:100%;
			#content{
				width:65%;
				max-width:940px;
				height:100%;
			}
			aside{
				width:35%;
				max-width:400px;
				height:100%;
				
			
				
				section{
					padding:35px;
					height:auto;
					
					.visual{
						float:none;
						margin:0 auto;
						padding-bottom:20px;
						display:block;
					}
					
					input[type=text]{
					width:100%;
					}
				}
				
			
				
			}
		}
	}
	
	/* hide code btn */
	.btncode{
		display: none;
	}

}
